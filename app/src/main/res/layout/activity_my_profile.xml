<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MyProfile">

    <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/gradient"
               android:scaleType="fitXY"/>

    <ImageView android:id="@+id/imageView"
               android:layout_width="216dp"
               android:layout_height="218dp"
               android:src="@drawable/picture"
               android:layout_marginTop="70dp"
               android:layout_centerHorizontal="true"/>

    <TextView
            android:text="ROZS RAVEN TIO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true" android:layout_marginTop="309dp" android:id="@+id/textView"
            android:textColor="#00FF00" android:textSize="60px"/>

    <Button
            android:layout_width="match_parent"
            android:layout_height="180px"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:background="#FFFF00"
            android:text="RETURN"
            android:textSize="90px"
            android:textColor="#000000"
            android:textStyle="bold"
            android:id="@+id/btnReturn"/>

    <TextView
            android:layout_width="1000px"
            android:layout_height="1150px"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/textView"
            android:text="@string/program"
            android:textColor="#FFFFFF"
    />


</RelativeLayout>