<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Profile">

    <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/gradient"
               android:scaleType="fitXY"/>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="1170px"
                    android:layout_marginBottom="334dp"
                    android:layout_alignParentTop="true">

        <TextView android:id="@+id/textWelcome"
                  android:textColor="#FFFFFF"
                  android:layout_centerVertical="true"
                  android:layout_centerHorizontal="true"
                  android:gravity="center"
                  android:text=" "
                  android:layout_width="122dp"
                  android:layout_height="32dp"
                  android:layout_alignParentTop="true"
                  android:layout_marginTop="32dp"/>

        <ImageView android:id="@+id/imageView"
                   android:layout_width="216dp"
                   android:layout_height="218dp"
                   android:src="@drawable/picture"
                   android:layout_marginTop="145dp"
                   android:layout_centerInParent="true"/>

        <TextView android:id="@+id/profile"
                  android:textColor="#FFFFFF"
                  android:gravity="center"
                  android:text="WELCOME TO ROZS' PROFILE"
                  android:layout_width="200dp"
                  android:layout_height="32dp"
                  android:layout_centerVertical="true"
                  android:layout_centerHorizontal="true"
                  android:layout_below="@id/imageView"/>

        <TextView android:id="@+id/lblChoose"
                  android:textColor="#FFFFFF"
                  android:gravity="center"
                  android:text="CHOOSE A PROFILE"
                  android:layout_width="200dp"
                  android:layout_height="32dp"
                  android:layout_below="@id/profile"
                  android:layout_centerVertical="true"
                  android:layout_centerHorizontal="true"/>


    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1170px"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="1dp">

        <Button android:id="@+id/myProfile"
                android:text="MY PROFILE"
                android:layout_width="600px"
                android:background="@drawable/btn_my_profile"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="350dp" />

        <Button android:id="@+id/facebook"
                android:text="FACEBOOK"
                android:layout_width="600px"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/btnfacebook"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="280dp" />

        <Button android:id="@+id/instagram"
                android:text="INSTAGRAM"
                android:layout_width="600px"
                android:background="@drawable/btninstagram"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="210dp" />

        <Button android:id="@+id/github"
                android:text="GITHUB"
                android:layout_width="600px"
                android:background="@drawable/btngithub"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="140dp" />

        <Button android:id="@+id/youtube"
                android:text="YOUTUBE"
                android:layout_width="600px"
                android:background="@drawable/btnyoutube"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="70dp" />

        <Button android:id="@+id/btnBack"
                android:text="RETURN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#0FF0FF"
                android:textColor="#000000"
                android:textStyle="bold"/>

    </RelativeLayout>

</RelativeLayout>